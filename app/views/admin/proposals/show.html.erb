<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.proposals") %> - <%= @proposal.title %>
<% end %>

<div class="proposal-show">
  <h2 class="inline-block"><%= @proposal.title %></h2>
    <% if @proposal.reviewed_false? %>
      <div class="float-right">
        <%= link_to 'Elutasítás', 
                admin_proposal_decline_proposal_path(proposal_id: @proposal.id),
                class: 'button hollow medium', style: "color: red;"
                %>
      </div>
      <div class="float-right" style="margin-right: 10px;">
        <%= link_to 'Elfogadás', 
                    admin_proposal_accept_proposal_path(proposal_id: @proposal.id),
                    class: 'button hollow medium', style: "color: green;"
                    %>
      </div>
    <% end %>
  <%= render "proposals/info", proposal: @proposal %>
</div>

<div class="small-12 column">
  <hr>
  <%= render "form" %>
  <hr>
</div>

<%= render "admin/milestones/milestones", milestoneable: @proposal %>
